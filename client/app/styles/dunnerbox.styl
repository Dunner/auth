
.dnr-box
  width 100%
  height 100%
  overflow hidden
  position relative
  background-color $chromeMellow

  & > *
    height 100%
    position relative

  & .dnr-slate
    height 100%
    width 100%

  & .dnr-slate-scroll
    overflow-y scroll
    overflow-x hidden
    height 100%
    width 100%

.dnr-slate-push
  padding 30px
  float right

  &:after
    content ''
    display block
    clear both
.dnr-slate-slide
  width 100%
  position relative
  &:after
    content ''
    display block
    clear both

.full-slide
  &:before
    content ''
    display block
    width 0px
    height 0px
    position absolute
    top -26px
    border-left: 25px solid transparent;
    border-right: 26px solid transparent;
    border-bottom: 26px solid white;
    border-bottom-color: inherit;
    left calc(50% - 13px)


.slide-white
  background #f5f5f5
.slide-standard
  content ''
.slide-mustard
  background $cYellow
  border-bottom-color $cYellow
  border-right-color $cYellow
.slide-blood
  background $cRorange
  border-bottom-color $cRorange
  border-right-color $cRorange
.slide-lime
  background $cLime
  border-bottom-color $cLime
  border-right-color $cLime
.slide-ice
  background $cLblue
  border-bottom-color $cLblue
  border-right-color $cLblue
.slide-night
  background color-medium
  border-bottom-color color-medium
  border-right-color color-medium
